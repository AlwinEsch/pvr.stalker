  version="0.1"
  name="Stalker Client"
  provider-name="dvbken">
  <requires>
    <c-pluff version="0.1"/>
    <import addon="xbmc.pvr" version="1.9.2"/>
  </requires>
  <extension
    point="xbmc.pvrclient"
    library_linux="Kodi_Stalker_Client.pvr"
	  library_osx="Kodi_Stalker_Client.pvr"
    library_freebsd="Kodi_Stalker_Client.pvr"
    library_wingl="Kodi_Stalker_Client_win32.dll"
    library_windx="Kodi_Stalker_Client_win32.dll"
    library_android="libKodi_Stalker_Client.so" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">PVR Client to connect Kodi to Stalker Middleware</summary>
